<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical" android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#FFFFFF"
    android:weightSum="100">


    <ScrollView
        android:layout_width="fill_parent"
        android:layout_height="0dp"
        android:layout_weight="90"
        android:layout_marginStart="50dp"
        android:layout_marginEnd="50dp"
        android:layout_marginTop="75dp"
        android:layout_marginBottom="20dp">
        <LinearLayout
            android:layout_width="fill_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical">

            <TextView
                android:text="a"
                android:layout_width="fill_parent"
                android:layout_height="wrap_content"
                android:background="#FEE900"

                android:paddingBottom="5dp"
                android:paddingTop="5dp"

                android:id="@+id/tvpl1"
                android:textSize="20sp"
                android:layout_gravity="start"
                android:gravity="center" />
            <TextView
                android:text="b"
                android:layout_width="fill_parent"
                android:layout_height="wrap_content"
                android:background="#FCB975"
                android:paddingBottom="5dp"
                android:paddingTop="5dp"
                android:id="@+id/tvpl2"
                android:textSize="20sp"
                android:layout_gravity="start"
                android:gravity="center" />
            <TextView
                android:text="c"
                android:layout_width="fill_parent"
                android:layout_height="wrap_content"
                android:background="#5ECAE7"
                android:paddingBottom="5dp"
                android:paddingTop="5dp"
                android:id="@+id/tvpl3"
                android:textSize="20sp"
                android:layout_gravity="start"
                android:gravity="center" />
            <TextView
                android:text="d"
                android:layout_width="fill_parent"
                android:layout_height="wrap_content"
                android:background="#84CBA1"
                android:paddingBottom="5dp"
                android:paddingTop="5dp"
                android:id="@+id/tvpl4"
                android:textSize="20sp"
                android:layout_gravity="start"
                android:gravity="center" />
            <TextView
                android:text="e"
                android:layout_width="fill_parent"
                android:layout_height="wrap_content"
                android:background="#F58963"

                android:paddingBottom="5dp"
                android:paddingTop="5dp"
                android:id="@+id/tvpl5"
                android:textSize="20sp"
                android:layout_gravity="start"
                android:gravity="center" />
            <TextView
                android:text="f"
                android:layout_width="fill_parent"
                android:layout_height="wrap_content"
                android:background="#FEC40D"

                android:paddingBottom="5dp"
                android:paddingTop="5dp"
                android:id="@+id/tvpl6"
                android:textSize="20sp"
                android:layout_gravity="start"
                android:gravity="center" />
            <TextView
                android:text="g"
                android:layout_width="fill_parent"
                android:layout_height="wrap_content"
                android:background="#62C3A6"

                android:paddingBottom="5dp"
                android:paddingTop="5dp"
                android:id="@+id/tvpl7"
                android:textSize="20sp"
                android:layout_gravity="start"
                android:gravity="center" />
            <TextView
                android:text="h"
                android:layout_width="fill_parent"
                android:layout_height="wrap_content"
                android:background="#44A9DF"
                android:paddingBottom="5dp"
                android:paddingTop="5dp"
                android:id="@+id/tvpl8"
                android:textSize="20sp"
                android:layout_gravity="start"
                android:gravity="center"/>
        </LinearLayout>
    </ScrollView>


    <LinearLayout
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:layout_gravity="center_vertical"
        android:weightSum="2"
        android:layout_margin="20dp">
        <Button
            android:id="@+id/buttonpl1"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:background="@drawable/button_green_flat_selector"
            android:layout_gravity="center"
            android:onClick="onClick_Back"
            android:layout_marginEnd="30dp"
            android:text="HOME" />
        <Button
            android:id="@+id/buttonpl2"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:background="@drawable/button_green_flat_selector"
            android:layout_gravity="center"
            android:onClick="onClick_Spin"
            android:text="SPIN THE WHEEL" />
    </LinearLayout>
</LinearLayout>