<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent" android:layout_height="match_parent">

    <EditText
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:id="@+id/etsend"
        android:paddingTop="100dp"
        />


    <Button
        android:layout_below="@+id/etsend"
        android:layout_alignParentRight="true"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="StartActivity"
        android:id="@+id/bSA"
        android:layout_gravity="center_vertical"
        />

    <!-- aligntop is to keep same distance to top with someone-->
    <Button
        android:layout_toLeftOf="@+id/bSA"
        android:layout_alignTop="@+id/bSA"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="StartActivityForResule"
        android:id="@+id/bSAFR"
        android:layout_gravity="center_vertical" />

    <TextView
        android:layout_below="@+id/bSAFR"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="New Text"
        android:id="@+id/tvGot"
        android:gravity="center" />



</RelativeLayout>
